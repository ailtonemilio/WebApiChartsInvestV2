@model IEnumerable<WebApiChartsInvestV2.Model.Entities.Portfolio>

@{
    ViewData["Title"] = "Portfolio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="subheader">
    <h1 class="subheader-title">
        <i class='subheader-icon fal fa-passport'></i> Web Chart Invest <span class='fw-300'>Portfolio List</span>
    </h1>
    <div class="subheader-block d-lg-flex align-items-center border-faded border-right-0 border-top-0 border-bottom-0 ml-3 pl-3">
        <div class="d-inline-flex flex-column justify-content-center mr-3">
            <div class="position-absolute pos-top pos-right d-none d-sm-block"><span class="js-get-date"></span></div>
        </div>
        <span class="sparklines hidden-lg-down" sparkType="bar" sparkBarColor="#fe6bb0" sparkHeight="32px" sparkBarWidth="5px" values="1,4,3,6,5,3,9,6,5,9,7"></span>
    </div>
</div>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<div class="card">
    <div class="card-body">
        <table id="dt-basic" class="table table-bordered table-hover table-striped w-100">
            <thead class="bg-primary-600">
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.PortfolioName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserId)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.PortfolioId" class="btn btn-primary btn-icon" title="Edit"><i class="fal fa-edit"></i></a>
                            <a asp-action="Details" asp-route-id="@item.PortfolioId" class="btn btn-info btn-icon" title="Details"><i class="fal fa-address-card"></i></a>
                            <a href="javascript:void(0);" class="btn btn-danger btn-icon delete" id="@item.PortfolioId" title="Delete"><i class="fal fa-trash-alt"></i></a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PortfolioName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserId)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">

    </div>
</div>

